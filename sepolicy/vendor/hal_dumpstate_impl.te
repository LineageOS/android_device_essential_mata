r_dir_file(hal_dumpstate_impl, debugfs_ion)
r_dir_file(hal_dumpstate_impl, debugfs_ufs)
r_dir_file(hal_dumpstate_impl, debugfs_wlan)
r_dir_file(hal_dumpstate_impl, sysfs_thermal)
